{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Page Schema",
  "type": "object",
  "properties": {
    "version": { 
      "type": "integer",
      "minimum": 1
    },
    "title": { 
      "type": "string",
      "minLength": 1
    },
    "locale": { 
      "type": "string",
      "pattern": "^[a-z]{2}(_[A-Z]{2})?$"
    },
    "blocks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/block"
      }
    }
  },
  "required": ["blocks"],
  "definitions": {
    "block": {
      "type": "object",
      "properties": {
        "id": { 
          "type": "string",
          "minLength": 1
        },
        "type": { 
          "type": "string",
          "minLength": 1
        },
        "data": { 
          "type": "object"
        }
      },
      "required": ["id", "type", "data"]
    }
  }
}